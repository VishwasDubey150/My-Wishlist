<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.place_details"
    android:orientation="vertical"
    android:background="#D1E0FA">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"
            app:cardCornerRadius="15dp"
            app:cardElevation="180dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bac"
                    android:textColor="@color/black">
                </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            android:layout_marginTop="-70dp"
            android:onClick="backing">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="top"
                    android:src="@drawable/splas">
                </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp"
            app:cardElevation="80dp"
            android:layout_marginTop="-20dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Name of place"
                   android:layout_gravity="center"
                   android:textSize="50dp"
                   android:paddingLeft="20dp"
                   android:paddingTop="10dp"
                   android:paddingBottom="10dp"
                   android:paddingRight="20dp"
                   android:fontFamily="@font/blinker_bold">
               </TextView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/blinker_bold"
            android:text="Very beautiful place to visit Very beautiful place to visitVery beautiful place to visitVery "
            android:textSize="30dp">
        </TextView>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="150dp"
            android:fontFamily="@font/blinker_bold"
            android:padding="10dp"
            android:text="Location"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="40dp"
            app:backgroundTint="#58E0C0"
            android:layout_marginTop="10dp">
        </Button>
</androidx.appcompat.widget.LinearLayoutCompat>