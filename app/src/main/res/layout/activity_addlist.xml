<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    layout_width="match_parent"
    layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.addlist"
    android:background="#D1E0FA"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/back"
        android:onClick="back">
    </ImageView>

    <EditText
        android:id="@+id/name"
        android:elevation="50dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:hint="Name of place"
        android:textSize="35dp"
        android:fontFamily="@font/blinker_bold"
        android:textAlignment="center"
        android:background="@drawable/et_bg"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
    </EditText>

    <EditText
        android:id="@+id/description"
        android:elevation="50dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:hint="Description of place"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/blinker_bold"
        android:textAlignment="center"
        android:background="@drawable/et_bg"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
    </EditText>
    <TextView
        android:id="@+id/dates"
        android:elevation="50dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:hint="Expected Date"
        android:textSize="35dp"
        android:fontFamily="@font/blinker_bold"
        android:textAlignment="center"
        android:background="@drawable/et_bg"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:onClick="date">
    </TextView>

    <EditText
        android:id="@+id/location"
        android:elevation="50dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:textSize="25dp"
        android:fontFamily="@font/blinker_bold"
        android:textAlignment="center"
        android:background="@drawable/et_bg"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:onClick="location">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/pic"
            android:layout_marginRight="30dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/image"
            android:layout_marginLeft="20dp"
            android:elevation="50dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Add image"
            android:textAlignment="center"
            android:textSize="30dp"
            android:fontFamily="@font/blinker_bold"
            android:onClick="addimage">
        </TextView>
    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="50dp"
        android:fontFamily="@font/blinker_bold"
        android:padding="10dp"
        android:onClick="save"
        android:text="Save"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="40dp"
        app:backgroundTint="#58E0C0"
        android:layout_marginTop="10dp">
    </Button>



</androidx.appcompat.widget.LinearLayoutCompat>